@model Lab_1.Models.InputModel

@{
    ViewBag.Title = "PersonalAccount";
}

<div class="">


    <div class="col-md-4">

    </div>

    <div class="col-md-4 div-neumorphism">
        <h1>
            Добро пожаловать!
           
        </h1>
        <br />

        @{Html.BeginForm("Index", "PersonalAccount", FormMethod.Post, new { @class = "form-sign-in" }); }
        <div class="form-group">
            @Html.LabelFor(m => m.Text)
            @Html.TextBoxFor(m => m.Text, new { @class = "form-elem form-control center-block" })

        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ListBoxValues)
            @Html.ListBoxFor(m => m.ListBoxValues, new MultiSelectList(new string[] { "Audi", "Bmw", "Volvo" }), new { @class = "form-elem form-control center-block" })

        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.DropdownListValues)
            @Html.DropDownListFor(m => m.DropdownListValues, new SelectList(new string[] { "Linux", "Mac OS", "Windows" }), new { @class = "form-elem form-control center-block" })

        </div>

        <div class="form-check">
            @Html.RadioButtonFor(m => m.Radio, "Вариант 1",
                new { @class = "form-check-input", id = "radio1" })
            <label class="form-check-label" for="Radio1">Radio 1</label>

        </div>

        <div class="form-check">
            @Html.RadioButtonFor(m => m.Radio, "Вариант 2",
                new { @class = "form-check-input", id = "radio2" })
            <label class="form-check-label" for="Radio2">Radio 2</label>

        </div>

        <button type="submit" id="input-submit" class="form-elem btn btn-primary">Отправить</button>
        
        @{Html.EndForm();}

        @{
            if (IsPost)
            {   <p>Вы ввели :</p>
                <p>@Html.LabelFor(m => m.Text) : @Html.DisplayFor(m => m.Text)</p>
                <p>@Html.LabelFor(m => m.ListBoxValues) : @Html.DisplayFor(m => m.ListBoxValues)</p>
                <p>@Html.LabelFor(m => m.DropdownListValues) : @Html.DisplayFor(m => m.DropdownListValues)</p>
                <p>@Html.LabelFor(m => m.Radio) : @Html.DisplayFor(m => m.Radio)</p>

            }

        }
    </div>

    <div class="col-md-4">
    </div>
</div>
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

