@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="">
    

    <div class="col-md-4">

    </div>

    <div class="col-md-4 div-neumorphism">
        <h1>
            Добро пожаловать!
        </h1>
        <h5>
            Войдите в уже существующий аккаунт или зарегистрируйте новый.
        </h5>
        <br />
        <form action="~/Controllers/SignIn" method="post" name="login_form" target="_self" class=" form-sign-in">

            <input type="email" name="email" id="email" placeholder="email" class="form-elem form-control center-block">
            <input type="password" name="password" id="password" placeholder="password" class="form-elem form-control center-block">
            <br />
            <button type="submit" id="login_button" class="form-elem btn btn-primary">Sign in</button>
            <br />
            <button type="submit" id="register_button" class="form-elem btn btn-secondary">Register</button>

        </form>
    </div>

    <div class="col-md-4">
    </div>
</div>